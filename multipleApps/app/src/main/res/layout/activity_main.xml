<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_mass"
        android:layout_width="159dp"
        android:layout_height="0dp"
        android:layout_marginBottom="247dp"
        android:text="Mass Calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_age" />

    <Button
        android:id="@+id/btn_age"
        android:layout_width="145dp"
        android:layout_height="0dp"
        android:layout_marginBottom="77dp"
        android:text="Age Calculator"
        app:layout_constraintBottom_toTopOf="@+id/btn_mass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculator" />

    <Button
        android:id="@+id/btn_calculator"
        android:layout_width="123dp"
        android:layout_height="0dp"
        android:layout_marginTop="128dp"
        android:layout_marginBottom="102dp"
        android:text="Calculator"
        app:layout_constraintBottom_toTopOf="@+id/btn_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>